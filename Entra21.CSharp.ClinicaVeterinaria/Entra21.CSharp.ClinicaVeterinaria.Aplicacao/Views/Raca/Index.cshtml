<h1>Lista de Raças</h1>
<div>
    <a href="/raca/cadastrar">Cadastrar</a>
</div>
<table>
    <thead>
        <!-- Cabeçalho da tabela -->
        <tr>
            <!-- Linha da tabela -->
            <th>Código</th> <!-- Coluna específica do cabeçalho -->
            <th>Nome</th> <!-- Coluna específica do cabeçalho -->
            <th>Espécie</th> <!-- Coluna específica do cabeçalho -->
        </tr>
    </thead>
    <tbody>
        <!-- Lugar dos registros da tabela -->
        @foreach (var raca in ViewBag.Racas)
        {
            <tr>
                <!-- Linha -->
                <td>@raca.Id</td> <!-- Coluna específica para o body-->
                <td>@raca.Nome</td> <!-- Coluna específica para o body-->
                <td>@raca.Especie</td> <!-- Coluna específica para o body-->
            </tr>
        }
    </tbody>
</table>